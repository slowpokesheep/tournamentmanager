<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#F5F5F5"
    app:alignContent="flex_start"
    app:alignItems="flex_start"
    app:flexDirection="row"
    app:justifyContent="center"
    app:showDivider="beginning|middle|end"
    app:dividerDrawable="@drawable/divider"
    >

    <TextView
        android:id="@+id/tournament_list_item_category"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_flexBasisPercent="35%" />

    <TextView
        android:id="@+id/tournament_list_item_name"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_flexBasisPercent="45%" />

    <TextView
        android:id="@+id/tournament_list_item_slots"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_flexBasisPercent="20%" />


</com.google.android.flexbox.FlexboxLayout>